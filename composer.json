{
    "name": "oidc/support",
    "description": "The common support libraries for OpenID Connect packages.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "MilesChou",
            "email": "jangconan@gmail.com",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/oidcphp/support/issues"
    },
    "require": {
        "php": ">=7.1",
        "psr/container": "^1.0",
        "psr/container-implementation": "1.0.0",
        "psr/http-client": "^1.0"
    },
    "require-dev": {
        "guzzlehttp/guzzle": "^6.4",
        "php-coveralls/php-coveralls": "^2.1",
        "phpstan/phpstan": "^0.11.8",
        "phpunit/phpunit": "^7 | ^8",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "provide": {
        "psr/container-implementation": "1.0.0"
    },
    "autoload": {
        "psr-4": {
            "OpenIDConnect\\Support\\": "src/Support"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    }
}
